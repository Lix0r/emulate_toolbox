<Window x:Class="Toolbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Toolbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Background="{x:Null}">
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Margin="240,159,0,0" VerticalAlignment="Top" Width="75" Click="button_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</Window>
