<UserControl x:Class="Toolbox.Resources.UserControls.ProjectStackPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Toolbox.Resources.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="232" d:DesignWidth="385">
    <UserControl.Resources>
        <Style x:Key="DockPanel" TargetType="{x:Type DockPanel}">
            <Setter Property="Background" Value="#212121"/>
            <Setter Property="KeyboardNavigation.TabNavigation" Value="None"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="AllowDrop" Value="true"/>
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalFirst"/>
            <Setter Property="Stylus.IsFlicksEnabled" Value="False"/>
        </Style>
    </UserControl.Resources>
    <Border Background="#212121" BorderBrush="#424042" CornerRadius="2" BorderThickness="1">
            <Grid></Grid>
        </Border>
</UserControl>
